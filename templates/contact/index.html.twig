{% extends '../contacts.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>
    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>

        This friendly message is coming from:
        <ul>
            <li>Your controller at <code><a
                            href="{{ 'C:/Users/na3t1/Desktop/agat_info/src/Controller/ContactController.php'|file_link(0) }}">src/Controller/ContactController.php</a></code>
            </li>
            <li>Your template at <code><a
                            href="{{ 'C:/Users/na3t1/Desktop/agat_info/templates/contact/index.html.twig'|file_link(0) }}">templates/contact/index.html.twig</a></code>
            </li>
        </ul>
    </div>


    <div class="container">
        <div class="row mb-3">
            <div class="col-lg-2"></div>
            <div class="col-sm-12 col-lg-9">
                <div class="row">
                    <div class="col-6 fs-4"><i class="bi bi-telephone-fill text-success"></i> Номер телефона:
                    </div>
                    <div class="col-6 fs-4">
                        {% if contacts.number1 %}
                            <a class="text-success" href="tel:{{ contacts.number1 }}">{{ contacts.number1 }}</a>
                        {% endif %}
                        {% if contacts.number2 %}
                            <a class="text-success" href="tel:{{ contacts.number2 }}">{{ contacts.number2 }}</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% if contacts.tg %}
            <div class="row mb-2">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4">
                        </div>
                        <div class="col-6 fs-4"><a class="text-success text-decoration-none"
                                                   href="{{ contacts.tg }}"><i class="bi bi-telegram"></i> Напишите нам
                                в <b>Telegram</b></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if contacts.wa %}
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4">
                        </div>
                        <div class="col-6 fs-4">
                            <a class="text-success text-decoration-none"
                               href="{{ contacts.wa }}"><i class="bi bi-whatsapp"></i> Напишите нам в
                                <b>WhatsApp</b></a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if contacts.email %}
            <div class="row mb-5 mt-5">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4"><i class="bi bi-envelope-fill text-success"></i> Электронная почта:
                        </div>
                        <div class="col-6 fs-4"><a class="text-success"
                                                   href="mailto:{{ contacts.email }}">{{ contacts.email }}</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if contacts.workTime %}
            <div class="row mb-5">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4"><i class="bi bi-clock-fill text-success"></i> Часы работы:
                        </div>
                        <div class="col-6 fs-4"> {{ contacts.workTime }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if contacts.area %}
            <div class="row mb-5">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4"><i class="bi bi-geo-alt-fill text-success"></i> Местоположение:
                        </div>
                        <div class="col-6 fs-4"> {{ contacts.area }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        {% if contacts.address %}
            <div class="row mb-5">
                <div class="col-lg-2"></div>
                <div class="col-sm-12 col-lg-9">
                    <div class="row">
                        <div class="col-6 fs-4"><i class="bi bi-geo-alt-fill text-success"></i> Местоположение:
                        </div>
                        <div class="col-6 fs-4"> {{ contacts.address }}
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
