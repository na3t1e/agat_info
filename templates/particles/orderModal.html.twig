    {% form_theme orderForm 'bootstrap_5_layout.html.twig' %}
<div class="modal fade" tabindex="-1" id="exampleModal">
    <div class="modal-dialog">
        <div class="modal-content border-blue-bold">

            <div class="modal-body">
                {{ form_start(orderForm) }}
                {{ form_widget(orderForm.name) }}
                {{ form_row(orderForm.fio) }}
                {{ form_row(orderForm.phone) }}
                {{ form_row(orderForm.email) }}
                {{ form_row(orderForm.serviceType) }}
                {{ form_row(orderForm.message) }}
                {{ form_widget(orderForm.pd_agreement) }}
                {{ form_rest(orderForm) }}
                {{ form_end(orderForm) }}
            </div>
        </div>
    </div>
</div>

<script>

    function launchModal(serviceType) {
        let orderModal = new bootstrap.Modal(document.getElementById('exampleModal'), {})
        document.getElementById('order_serviceType').value = serviceType
        $("#order_phone").mask("+7 (999) 999-99-99");
        orderModal.toggle();
    }

    function openCreateFormError() {
        let orderModal = new bootstrap.Modal(document.getElementById('exampleModal'), {})
        orderModal.toggle();
    }

    let checkbox = document.getElementById('order_pd_agreement')
    let submit = document.getElementById('order_save')

    checkbox.addEventListener('change', function() {
        if (this.checked) {
            submit.disabled = false
        } else {
            submit.disabled = true
        }
    })

</script>

{% if createError == 1 %}
    <script>openCreateFormError()</script>
{% endif %}