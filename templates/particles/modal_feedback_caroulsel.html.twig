<div class="modal modal-xl fade" tabindex="-1" id="exampleModalCaroulsel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner" id="images">
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="prev" id="prevImage">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample"
                            data-bs-slide="next" id="nextImage">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<script>
    function launchModalCaroulsel(images) {
        let orderModal = new bootstrap.Modal(document.getElementById('exampleModalCaroulsel'), {})
        if (images.length < 2) {
            document.getElementById('prevImage').style.display = 'none';
            document.getElementById('nextImage').style.display = 'none';
        } else {
            document.getElementById('prevImage').style.display = 'unset';
            document.getElementById('nextImage').style.display = 'unset';
        }
        for (let i = 0; i < images.length; i++) {
            if (i === 0) {
                document.getElementById('images').innerHTML =
                    `<div class="carousel-item active">
                        <img src="` + '/uploads/' + images[i] +
                    `" class="d-block w-100" alt="...">
                     </div>`

            } else {
                document.getElementById('images').innerHTML +=
                    `<div class="carousel-item">
                        <img src="` + '/uploads/' + images[i] +
                    `" class="d-block w-100" alt="...">
                     </div>`
            }

        }
        orderModal.toggle();
    }
</script>