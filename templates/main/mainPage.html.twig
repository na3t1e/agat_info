{% extends 'base.html.twig' %}
{% block title %}{{ seoService.findByPath(app.request.pathinfo).title|default('Авиакомпания АГАТ | Главная') }}{% endblock %}
{% block noncontainer %}
    <div class="row mt-0 video-container">
        <video id="video" autoplay loop muted playsinline preload="yes" poster="{{ asset('images/skies.png') }}"
               class="h-100">
            <source class="lazy" src="{{ asset('videos/video.mp4') }}" type="video/mp4">
        </video>
        <div class="w-100 p-0 p-lg-5 lazy"
{#        style="background-image: url({{ asset('videos/video.webp') }})"#}
        >
            <div class="row mt-0 mb-0 mt-lg-5 mb-lg-5">
                <div class="col-11 col-lg-8 ms-auto me-auto mt-0 mb-5">
                    <div class="row h-100">
                        <div class="col-12 col-lg-6 wow fadeInLeftBig" >
                            <div class="row h-100 ">
                                <img class="img-fluid lazy" src="{{ asset('svg/logo.svg') }}">
                            </div>
                        </div>
                        <div class="col-11 col-lg-6">
                        <div class="col-1"></div>
                        <div class="col-12 text-white p-2 text-shadow-dark wow fadeInRightBig" data-wow-duration="2s">
                            {{ mainPage.mainText|raw }}
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        const vid = document.querySelector("video");
        vid.addEventListener("timeupdate", (e) => {
            if (e.target.currentTime >= 16) {
                e.target.currentTime = 0.0;
            }
        });
        $("video").each(function () {
            this.loop = false;
            this.onended = function () {
                this.load();
            };
            this.play();
        });
    </script>
{% endblock %}
{% block body %}
    <h2 class="text-center mb-5">Наши преимущества</h2>
    <div class="row row-cols-1 px-2 px-md-0 row-gap-2 justify-content-around row-cols-lg-3 h-100 mb-2 row-eq-height">
        <div class="col-12 col-lg-3-5 text-center shadow-blue-outer pt-5 wow fadeInLeft">
            <h2 class="fs-1 text-dark-blue text-shadow-dark-light ">1</h2>
            <p class="pt-5 pb-4">{{ mainPage.advantage1 }}</p>
        </div>
        <div class="col-12 col-lg-3-5 text-center shadow-blue-inner pt-5 wow fadeInUp">
            <h2 class="fs-1 text-dark-blue text-shadow-dark-light ">2</h2>
            <p class="pt-5 pb-4">{{ mainPage.advantage2 }}</p>
        </div>
        <div class="col-12 col-lg-3-5 text-center shadow-blue-outer pt-5 wow fadeInRight">
            <h2 class="fs-1 text-dark-blue text-shadow-dark-light ">3</h2>
            <p class="pt-5 pb-4">{{ mainPage.advantage3 }}</p>
        </div>
    </div>
    <h2 class="text-center mt-5 mb-5">Фотографии</h2>
    <center>
        <div id="carouselExampleControls" class="carousel slide col-sm-12 col-md-8 wow fadeInRight" data-bs-ride="carousel">
            <div class="carousel-inner">
                {% for i in mainPage.images %}
                    {% if i == mainPage.images|first %}
                        <div class="carousel-item active">
                            <img class="d-block w-100 img-fluid lazy" src="{{ asset('uploads/'~i) }}" alt="First slide">
                        </div>
                    {% else %}
                        <div class="carousel-item">
                            <img class="d-block w-100 img-fluid lazy" src="{{ asset('uploads/'~i) }}" alt="Second slide">
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </center>
    <script>
        // const videoElement = document.getElementById('video');
        // videoElement.play().then(() => {}).catch((error) => {
        //     videoElement.setAttribute("controls","controls");
        // });
        $('body').on('click touchstart', function () {
            const videoElement = document.getElementById('video');
            if (videoElement.playing) {
            }
            else {
                videoElement.play();
            }
        });
    </script>

{% endblock %}