<script>
    (function(){
        var STORAGE_KEY = 'cookie_consent_accepted_v1';
        function hasConsent(){
            try{ return localStorage.getItem(STORAGE_KEY) === '1'; }catch(e){ return false; }
        }
        function setConsent(){
            try{ localStorage.setItem(STORAGE_KEY,'1'); }catch(e){}
        }
        function showBanner(){ var b=document.getElementById('cookie-banner'); if(b){ b.style.display='block'; }}
        function hideBanner(){ var b=document.getElementById('cookie-banner'); if(b){ b.style.display='none'; }}
        function openModal(){
            var m=document.getElementById('cookie-modal');
            var bd=document.getElementById('cookie-modal-backdrop');
            if(m&&bd){ m.style.display='block'; m.style.opacity='1'; bd.style.display='block'; bd.style.opacity='1'; }
        }
        function closeModal(){
            var m=document.getElementById('cookie-modal');
            var bd=document.getElementById('cookie-modal-backdrop');
            if(m&&bd){ m.style.display='none'; bd.style.display='none'; }
        }
        function bind(){
            var openBtn=document.getElementById('cookie-open-agreement');
            var okBtn=document.getElementById('cookie-accept');
            var okModal=document.getElementById('cookie-modal-ok');
            var closeBtn=document.getElementById('cookie-modal-close');
            var backdrop=document.getElementById('cookie-modal-backdrop');
            if(openBtn){ openBtn.addEventListener('click', openModal); }
            function accept(){ setConsent(); closeModal(); hideBanner(); }
            if(okBtn){ okBtn.addEventListener('click', accept); }
            if(okModal){ okModal.addEventListener('click', accept); }
            if(closeBtn){ closeBtn.addEventListener('click', closeModal); }
            if(backdrop){ backdrop.addEventListener('click', closeModal); }
        }
        if(!hasConsent()){
            if(document.readyState === 'loading'){
                document.addEventListener('DOMContentLoaded', function(){ showBanner(); bind(); });
            } else {
                showBanner(); bind();
            }
        }
    })();
</script>

